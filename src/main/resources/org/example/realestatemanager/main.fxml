<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="684.0" prefWidth="1305.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23" fx:controller="org.example.realestatemanager.contoller.MainController">
    <center>
        <VBox spacing="10" styleClass="center-pane">
            <HBox spacing="10">
                <Label text="Search In All Fields:" />
                <TextField fx:id="generalFilterField" promptText="Search across all fields..." />

                <Label text="Owner:" />
                <TextField fx:id="filterOwnerField" promptText="Filter by Owner" />

                <Label text="Location:" />
                <TextField fx:id="filterLocationField" promptText="Filter by Location" />

                <Label text="Min Price:" />
                <TextField fx:id="filterMinPriceField" promptText="Min Price" />

                <Label text="Max Price:" />
                <TextField fx:id="filterMaxPriceField" promptText="Max Price" />
            </HBox>
            <TableView fx:id="propertyTable" prefHeight="500" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
                    <TableColumn fx:id="ownerColumn" prefWidth="150" text="Owner" />
                    <TableColumn fx:id="descriptionColumn" prefWidth="543.0" text="Description" />
                    <TableColumn fx:id="locationColumn" prefWidth="251.0" text="Location" />
                    <TableColumn fx:id="sizeColumn" prefWidth="126.0" text="Size (sq ft)" />
                    <TableColumn fx:id="priceColumn" prefWidth="184.0" text="Price ($)" />
                </columns>
            </TableView>
            <Pagination fx:id="pagination" maxPageIndicatorCount="10" pageCount="1" />
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10" styleClass="bottom-pane">
            <TextField fx:id="ownerField" promptText="Owner" HBox.hgrow="ALWAYS" />
            <TextField fx:id="descriptionField" promptText="Description" HBox.hgrow="ALWAYS" />
            <TextField fx:id="locationField" promptText="Location" HBox.hgrow="ALWAYS" />
            <TextField fx:id="sizeField" promptText="Size" HBox.hgrow="ALWAYS" />
            <TextField fx:id="priceField" promptText="Price" HBox.hgrow="ALWAYS" />
            <Button onAction="#handleAddProperty" styleClass="add-button" text="Add Property" />
        </HBox>
    </bottom>
</BorderPane>
